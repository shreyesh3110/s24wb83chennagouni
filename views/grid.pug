extends layout

block content
  h1 Grid Display
  p Welcome to Mukund's #{title}
  title Express 
  link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css')

  p Rows: #{query.rows}, Columns: #{query.cols}

  - const rows = Number(query.rows) || 0
  - const cols = Number(query.cols) || 0

  table#outer
    - if (!Number.isInteger(rows) || !Number.isInteger(cols) || rows < 3 || rows > 13 || cols < 3 || cols > 13)
      p Invalid input. Please provide integer values between 3 and 13 for both rows and columns.
    - else
      - for (let i = 0; i < rows; i++)
        tr
          - for (let j = 0; j < cols; j++)
            td= i * i + j