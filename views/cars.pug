extends layout
 
block content
  h1= title
 
  //- Hardcode results array
  -
    const results = [
      { car_name: 'Camry', model: 'sedan', power: 200 },
      { car_name: 'F150', model: 'truck', power: 800 },
      { car_name: 'Wrangler', model: 'SUV', power: 400 }
    ];
 
  //- Outer container
  .container-fluid
    .row
      //- Loop over each item in results, adding index to use for the buy function
      each item, index in results
        .col-sm-2(onclick=`buy(${index})`)  // Add onclick event here
          h3 #{item.car_name}
          p Model: #{item.model}
          p Power Usage: #{item.power}W
 
  //- JavaScript function to handle the buy action
  script.
    function buy(index) {
      alert(`You purchased item ${index}`);
    }